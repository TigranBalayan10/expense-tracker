<main>
    <nav class="navbar navbar-light nav-bar bg-light">
        <div class="container-fluid">
            <div class="badge bg-success text-wrap fs-5" style="width: 10rem">
                Expenses paid {{expenses}}
            </div>
            <div class="badge bg-success text-wrap fs-5" style="width: 10rem">
                Income left {{income}}
            </div>
            <form class="d-flex">
                <button class="btn btn-outline-success" type="submit">Logout</button>
            </form>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col mt-3">
                <div class="card card-dashboard" style="width: 32rem">
                    <div class="card-body">
                        <div class="d-grid gap-2 d-md-block mb-3">
                            <button type="button" class="btn btn-success" data-bs-toggle="modal"
                                data-bs-target="#addExpenseModal">
                                + Add Expense
                            </button>
                            <button type="button" class="btn btn-success" data-bs-toggle="modal"
                                data-bs-target="#addTagModal">
                                + Add Tag
                            </button>
                        </div>
                        <div class="d-grid gap-3">
                            {{> expense }}
                            <div class="badge bg-secondary text-wrap fs-5" style="width: 30rem">
                                26 days until the end of the month
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col mt-3">
                <div class="card card-dashboard" style="width: 32rem">
                    <div class="card-body text-center">
                        <h5 class="card-title fs-3">Interactive Graph</h5>
                        <div class="container w-80">
                            <canvas id="myPieChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="addExpenseModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="addExpenseModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content card-dashboard">
                <div class="modal-header">
                    <h5 class="modal-title" id="addExpenseModal">Add Expense</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-grid gap-3">
                    <div class="d-flex justify-content-between">
                        <h4 class="fs-5">Product Tags</h4>
                        {{> dropdown}}
                    </div>
                    <div class="d-flex justify-content-between">
                        <h4 class="fs-5">Product</h4>
                        <div class="d-flex justify-content-end">
                            <input type="text" class="form-control" id="product-input" placeholder="Product"
                                aria-label="Product" aria-describedby="addon-wrapping" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h4 class="fs-5">Price</h4>
                        <div class="d-flex justify-content-end">
                            <input type="text" class="form-control" id="price-input" placeholder="$" aria-label="$"
                                aria-describedby="addon-wrapping" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-success" id="add-expense">Add</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="addTagModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="addTagModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content card-dashboard">
                <div class="modal-header">
                    <h5 class="modal-title" id="addExpenseModal">Add Tag</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-grid gap-3">
                    <div class="d-flex justify-content-between">
                        <h4 class="fs-5">Tag</h4>
                        <div class="d-flex justify-content-end">
                            <input type="text" class="form-control" id="add-tag" placeholder="Add Tag" aria-label="Add Tag"
                                aria-describedby="addon-wrapping" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="submit" class="btn btn-success" id="add-tag-btn">Add</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="editExpenseModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="editExpenseModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content card-dashboard">
                <div class="modal-header">
                    <h5 class="modal-title" id="addExpenseModal">Edit Expense</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-grid gap-3">
                    <div class="d-flex justify-content-between">
                        <h4 class="fs-5">Tag</h4>
                        <div class="d-flex justify-content-end">
                            <input type="text" class="form-control" placeholder="Edit Tag" aria-label="Edit Tag"
                                aria-describedby="addon-wrapping" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h4 class="fs-5">Product</h4>
                        <div class="d-flex justify-content-end">
                            <input type="text" class="form-control" placeholder="Edit Product" aria-label="Add Product"
                                aria-describedby="addon-wrapping" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h4 class="fs-5">Price</h4>
                        <div class="d-flex justify-content-end">
                            <input type="text" class="form-control" placeholder="Edit Price" aria-label="Edit Price"
                                aria-describedby="addon-wrapping" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-success">Done</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="/javascript/dashboard.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="/javascript/charts.js"></script>
    </body>
</main>