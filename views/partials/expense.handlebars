<ul class="list-group gap-1">
    {{#each Products as |product|}}
    <li class="list-group-item d-flex justify-content-between align-items-center" style="background-color:  rgba(255, 255, 255, 0.4);">
        <p data-set-product-id="{{id}}">{{format_date createdAt}}</p>
        <div class="text-center">
            <p>{{product_name}}</p>
            {{!-- <p class="tag-text text-success">{{tag_name}}</p> --}}
        </div>
        <div class="d-flex justify-content-between">
            <p>${{price}}</p>
        </div>
        <button type="button" class="btn btn-outline-success product-edit-btn" data-bs-toggle="modal"
            data-bs-target="#editExpenseModal">
            Edit
        </button>
    </li>
    {{/each}}
</ul>